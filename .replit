modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["ffmpeg-full", "freetype", "lcms2", "libGL", "libGLU", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Telegram Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "telegram_bot_workflow"

[[workflows.workflow]]
name = "Telegram Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run.py"

[[workflows.workflow]]
name = "telegram_bot_workflow"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install -r pyproject.toml && python run.py"

[deployment]
run = ["sh", "-c", "python run.py"]
